<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tsegazeabg.com.expensemanager.ui.activities.HelpActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/splash_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<ImageView
    android:src="@drawable/splash_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Screen"/>
            <ImageView
                android:src="@drawable/splash_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:id="@+id/txt_help_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
